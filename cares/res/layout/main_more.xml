<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
	<TableLayout  
	    xmlns:android="http://schemas.android.com/apk/res/android"  
	    android:id="@+id/tableLayout1"  
	    android:layout_width="wrap_content"  
	    android:layout_height="wrap_content"  
	    android:paddingTop="20dip"
	    android:paddingLeft="10dip"
	    android:paddingRight="10dip"
	    android:background="#f5f1f0"
	    android:shrinkColumns="*"  
	    android:stretchColumns="*">  
	    <TableRow  
	        android:id="@+id/tableRow1"  
	        android:layout_height="wrap_content"  
	        android:layout_width="match_parent" 
	        android:paddingTop="10dip"
	        android:paddingBottom="5dip"
	        android:gravity="center_horizontal">
	        <ImageView
	            android:id="@+id/privacy"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/privacy_icon" />
		    <!-- <ImageView
		        android:id="@+id/contact_devider"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:paddingLeft="20dip"
		        android:paddingRight="20dip"
		        android:layout_toRightOf="@+id/contact"
		        android:src="@drawable/icon_devider" /> -->
		    <ImageView
		        android:id="@+id/legal"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:src="@drawable/legal_icon" />
		    <!-- <ImageView
		        android:id="@+id/how_to_devider"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="20dip"
		        android:paddingRight="20dip"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:layout_toRightOf="@+id/how_to"
		        android:src="@drawable/icon_devider" />-->
		    <ImageView
		        android:id="@+id/app"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:src="@drawable/app_icon"
		         />
		</TableRow>
		<TableRow  
	        android:id="@+id/tableRow2"  
	        android:layout_height="wrap_content"  
	        android:layout_width="match_parent"
	        android:paddingBottom="10dip"
	        android:gravity="center_horizontal">  
	        <TextView  
	            android:id="@+id/TextView04"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content"  
	            android:gravity="center"
	            android:text="PRIVACY POLICY"
	            android:textSize="11dip"
				android:textStyle="bold"
				android:textColor="#000000"
	        />  
	        <TextView  
	            android:id="@+id/TextView04"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content"  
	            android:gravity="center"
	            android:text="LEGAL" 
	            android:textSize="11dip"
				android:textStyle="bold"
				android:textColor="#000000"
	        />  
	        <TextView  
	            android:id="@+id/TextView03"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content"  
	            android:gravity="center"
	            android:text="ABOUT APP"  
	            android:textSize="11dip"
				android:textStyle="bold"
				android:textColor="#000000"
	        />  
	    </TableRow>  
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dip"
	        android:background="#cdc9c8"
	    />
		<TableRow  
	        android:id="@+id/tableRow3"  
	        android:layout_height="wrap_content"  
	        android:layout_width="match_parent"
	        android:paddingTop="20dip"
	        android:paddingBottom="5dip"
	        
	        android:gravity="center_horizontal"> 
			<ImageView
		        android:id="@+id/samsung"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:src="@drawable/samsung_icon"
		        android:layout_alignParentLeft="true" />
		    <!-- <ImageView
		        android:id="@+id/warranty_devider"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:paddingLeft="20dip"
		        android:paddingRight="20dip"
		        android:layout_toRightOf="@+id/warranty"
		        android:src="@drawable/icon_devider" />-->
		    <!-- <ImageView
		        android:id="@+id/tracking_devider"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="20dip"
		        android:paddingRight="20dip"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:layout_toRightOf="@+id/tracking"
		        android:src="@drawable/icon_devider" /> -->
		    <TextView/>  
		    <TextView/>  
		         />
	    </TableRow>
	    <TableRow  
	        android:id="@+id/tableRow4"  
	        android:layout_height="wrap_content"  
	        android:layout_width="match_parent"
	        android:gravity="center_horizontal"
	        android:paddingBottom="10dip">  
	        <TextView  
	            android:id="@+id/TextView04"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content"  
	            android:gravity="center"
	            android:text="VISIT SAMSUNG"
	            android:textSize="11dip"
				android:textStyle="bold"
				android:textColor="#000000"
	        />  
	        <TextView/>  
		    <TextView/>
	    </TableRow> 
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dip"
	        android:background="#cdc9c8"
	        android:paddingTop="10dip"
	    /> 
	</TableLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:layout_marginTop="20dip"
	    android:layout_marginRight="20dip"
	    android:gravity="right"
	    android:orientation="horizontal"
	    android:visibility="visible" >
		<ImageButton
			android:id="@+id/home_button"
			android:background="@drawable/home_btn"
			android:layout_width="76dip"
			android:layout_height="31dip"/>
		<ImageButton
			android:id="@+id/back_button"
			android:background="@drawable/back_btn"
			android:layout_width="76dip"
			android:layout_height="31dip"
			android:layout_marginLeft="10dip"/>
	</LinearLayout>
	<LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:background="#ffffff"
	    android:orientation="vertical">
		<TextView
		    android:id="@+id/copyright"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="#ffffff"
		    android:text="Copyright Â© 1995-2012 SAMSUNG All rights reserved."
		    android:textColor="#736f6e"
		    android:textSize="8dip"
		    android:layout_gravity="center_horizontal"
		    android:textStyle="normal" />
	</LinearLayout>	
</LinearLayout>	
