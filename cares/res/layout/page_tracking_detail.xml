<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
	<ImageView
		android:id="@+id/logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"			
		android:background="@drawable/logo_bg"
	/>	
	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#ffffff">
		<RelativeLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<com.samsung.cares.custom.CustomScrollView 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			   	android:id="@+id/detailLayout"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingTop="20dip"
				android:paddingLeft="20dip"
				android:paddingRight="20dip"
				android:visibility="invisible">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingBottom="10dip"
					android:text="Repair Status"
					android:textColor="#000000"
					android:textSize="16dip"
					android:textStyle="bold" />
				<TableLayout  
				    xmlns:android="http://schemas.android.com/apk/res/android"  
				    android:id="@+id/tableLayout1"  
				    android:layout_width="wrap_content"  
				    android:layout_height="wrap_content"  
				    android:paddingTop="20dip"
				    android:paddingLeft="10dip"
				    android:paddingRight="10dip"
				    android:background="#f5f1f0"
				    android:shrinkColumns="*"  
				    android:stretchColumns="*">  
				    <TableRow  
				        android:id="@+id/tableRow1"  
				        android:layout_height="wrap_content"  
				        android:layout_width="match_parent" 
				        android:paddingBottom="5dip"
				        android:gravity="center_horizontal">
				        <TextView
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text="Transaction Number : "
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
				        <TextView
							android:id="@+id/ticketNo"  
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text=""
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
					</TableRow>
					<TableRow  
				        android:id="@+id/tableRow1"  
				        android:layout_height="wrap_content"  
				        android:layout_width="match_parent" 
				        android:paddingTop="0dip"
				        android:paddingBottom="5dip"
				        android:gravity="center_horizontal">
				        <TextView
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text="Current Status : "
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
				        <TextView
							android:id="@+id/statusDesc"  
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text=""
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
					</TableRow>
					<TableRow  
				        android:id="@+id/tableRow_ServiceCenter"  
				        android:layout_height="wrap_content"  
				        android:layout_width="match_parent" 
				        android:paddingTop="0dip"
				        android:paddingBottom="5dip"
				        android:gravity="center_horizontal">
				        <TextView
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text="Service Center : "
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
				        <TextView
							android:id="@+id/ascName"  
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text=""
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
					</TableRow>
					<TableRow  
				        android:id="@+id/tableRow_RequestDate"  
				        android:layout_height="wrap_content"  
				        android:layout_width="match_parent" 
				        android:paddingTop="0dip"
				        android:paddingBottom="5dip"
				        android:gravity="center_horizontal">
				        <TextView
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text="Request Date : "
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
				        <TextView
							android:id="@+id/requestDate"  
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text=""
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
					</TableRow>
					<TableRow  
				        android:id="@+id/tableRow_ScheduleDate"  
				        android:layout_height="wrap_content"  
				        android:layout_width="match_parent" 
				        android:paddingTop="0dip"
				        android:paddingBottom="5dip"
				        android:gravity="center_horizontal">
				        <TextView
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text="Schedule Date : "
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
				        <TextView
							android:id="@+id/scheduleDate"  
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text=""
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
					</TableRow>
					<TableRow  
				        android:id="@+id/tableRow_CompleteDate"  
				        android:layout_height="wrap_content"  
				        android:layout_width="match_parent" 
				        android:paddingTop="0dip"
				        android:paddingBottom="5dip"
				        android:gravity="center_horizontal">
				        <TextView
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text="Complete Date : "
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
				        <TextView
							android:id="@+id/completeDate"  
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text=""
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
					</TableRow>
					<TableRow  
				        android:id="@+id/tableRow_ReceivedDate"  
				        android:layout_height="wrap_content"  
				        android:layout_width="match_parent" 
				        android:paddingTop="0dip"
				        android:paddingBottom="5dip"
				        android:gravity="center_horizontal">
				        <TextView
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text="Received Date : "
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
				        <TextView
							android:id="@+id/receivedDate"  
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text=""
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
					</TableRow>	
					<TableRow  
				        android:id="@+id/tableRow_ShipDate"  
				        android:layout_height="wrap_content"  
				        android:layout_width="match_parent" 
				        android:paddingTop="0dip"
				        android:paddingBottom="5dip"
				        android:gravity="center_horizontal">
				        <TextView
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text="Ship Date : "
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
				        <TextView
							android:id="@+id/shipDate"  
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text=""
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
					</TableRow>	
					<TableRow  
				        android:id="@+id/tableRow_TrackingInfo"  
				        android:layout_height="wrap_content"  
				        android:layout_width="match_parent" 
				        android:paddingTop="0dip"
				        android:paddingBottom="5dip"
				        android:gravity="center_horizontal">
				        <TextView
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text="Tracking Info : "
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
				        <TextView
							android:id="@+id/trackingInfo"  
							android:layout_weight="1"
							android:layout_width="0dip"
							android:layout_height="wrap_content"
							android:paddingBottom="0dip"
							android:text=""
							android:textColor="#000000"
							android:textSize="16dip"
							android:textStyle="normal" />
					</TableRow>						
				</TableLayout>
			
				<LinearLayout
			    	android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:paddingTop="10dip"
			        android:gravity="right">
				    <ImageButton
						android:id="@+id/call_button"
						android:background="@drawable/call_asc_btn"
						android:layout_width="133dip"
						android:layout_height="33dip"
						android:visibility="gone"/>
				    <ImageButton
						android:id="@+id/upload_button"
						android:background="@drawable/upload_btn"
						android:layout_width="133dip"
						android:layout_height="33dip"
						android:layout_marginLeft="10dip"/>
				</LinearLayout>
			</LinearLayout>
			</com.samsung.cares.custom.CustomScrollView>
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_alignParentBottom="true">
				<ImageButton
					android:id="@+id/home_button"
					android:background="@drawable/bottom_2_btn_home"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
				<ImageButton
					android:id="@+id/back_button"
					android:background="@drawable/bottom_2_btn_back"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			</LinearLayout>			
		</RelativeLayout>
		<ProgressBar
		   	android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"    
	        android:layout_gravity="center"
		   	android:id="@+id/loading_progress"
		   	android:indeterminateDrawable="@drawable/progress_medium"
			android:visibility="gone"
		/>		
	</FrameLayout>
</LinearLayout>	
