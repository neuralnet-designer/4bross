<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<com.samsung.cares.PlayerSurfaceView
		android:id="@+id/surface"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"/>
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<FrameLayout
			android:id="@+id/top_panel"
			android:layout_height="34dp"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:background="#88000000"
			android:layout_alignParentTop="true">
			<LinearLayout
				android:layout_gravity="center|center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="10dp"
				android:paddingRight="10dp">
				<TextView
					android:id="@+id/text_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textSize="18sp"
					android:text=""
					android:ellipsize="end"
		    		android:singleLine="true"
				/>
			</LinearLayout>
		</FrameLayout>
		<FrameLayout
			android:id="@+id/bottom_panel"
			android:layout_height="90dp"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:background="#88000000"
			android:layout_alignParentBottom="true"
		>
			<SeekBar android:id="@+id/timeline"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center|top"
				android:paddingLeft="20dp"
				android:paddingRight="20dp"
				android:layout_marginTop="5dp"
				android:thumb="@drawable/bt_playbar"
				style="@style/player_timeline"
			/>
			<LinearLayout
				android:layout_gravity="center|bottom"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
			>
				<TextView
					android:id="@+id/text_playtime_current"
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textSize="18sp"
					android:text=""
				/>
				<ImageButton android:id="@+id/button_play_prev"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:src="@drawable/bt_frev"
					android:background="#00000000"
					android:layout_marginLeft="40dp"
				/>
				<ImageButton android:id="@+id/button_play_pause"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:src="@drawable/bt_stop"
					android:background="#00000000"
					android:layout_marginLeft="30dp"
					android:layout_marginRight="30dp"
				/>
				<ImageButton android:id="@+id/button_play_next"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:src="@drawable/bt_next"
					android:background="#00000000"
					android:layout_marginRight="40dp"
				/>
				<TextView
					android:id="@+id/text_playtime_max"
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textSize="18sp"
					android:text=""
				/>
			</LinearLayout>
		</FrameLayout>
	</RelativeLayout>
	<!--
	<SeekBar android:id="@+id/vodplayer_volume"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:max="30"
		android:progress="15"
		android:layout_gravity="center|top"
		android:layout_marginRight="10dp"
		android:layout_marginTop="15dp"
	/>
	-->
	<ProgressBar
		android:id="@+id/player_loading_progress"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"    
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progress_large"
    />
</FrameLayout>