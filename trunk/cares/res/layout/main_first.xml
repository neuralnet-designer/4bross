<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">
	<ImageView
		android:id="@+id/main_banner"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"			
		android:background="@drawable/main_banner"
	/>
	<!-- 
	<View
		android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:background="#dfdfdf" />
	-->
	<TableLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="20dip"
	    android:paddingBottom="20dip"
	    android:paddingLeft="10dip"
	    android:paddingRight="10dip"
	    android:shrinkColumns="1"
	    android:background="#f2f2f2">
	    <TableRow            
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
			<LinearLayout 
	            android:orientation="horizontal"
	            android:layout_height="match_parent"
	            android:layout_weight="1">
	            <LinearLayout 
	                android:id="@+id/contact_layout"
		            android:orientation="vertical"
		            android:gravity="center_horizontal"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content">	
					<ImageView
					    android:id="@+id/contact"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:paddingTop="10dip"
					    android:src="@drawable/contact_icon" />
					<TextView  
			            android:id="@+id/contact_text"  
			            android:layout_width="match_parent"  
			            android:layout_height="wrap_content"  
			            android:paddingTop="10dip"
			            android:paddingBottom="10dip"
			            android:gravity="center"
			            android:text="CONTACT US"
			            android:textSize="11dip"
						android:textStyle="bold"
						android:textColor="#000000" />  
				</LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:orientation="horizontal"
	            android:layout_height="match_parent"
	            android:layout_weight="1">	
	            <View
	                android:layout_height="match_parent"
	                android:layout_width="1dp"
	                android:background="#dfdfdf"/>
	            <LinearLayout 
		            android:id="@+id/how_to_layout"
		            android:orientation="vertical"
		            android:gravity="center_horizontal"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content">	
			        <ImageView
				        android:id="@+id/how_to"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:paddingTop="10dip"
				        android:src="@drawable/how_to_icon" />
			        <TextView  
			            android:id="@+id/how_to_text"  
			            android:layout_width="match_parent"  
			            android:layout_height="wrap_content"
			            android:paddingTop="10dip"
			            android:paddingBottom="10dip"
			            android:gravity="center"
			            android:text="HOW TO VIDEO" 
			            android:textSize="11dip"
						android:textStyle="bold"
						android:textColor="#000000" />  
		        </LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:orientation="horizontal"
	            android:layout_height="match_parent"
	            android:layout_weight="1">	
	            <View
	                android:layout_height="match_parent"
	                android:layout_width="1dp"
	                android:background="#dfdfdf"/>
	            <LinearLayout 
		            android:id="@+id/faq_layout"
		            android:orientation="vertical"
		            android:gravity="center_horizontal"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content">	
			        <ImageView
				        android:id="@+id/faq"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:paddingTop="10dip"
				        android:src="@drawable/faq_icon" />
			        <TextView  
			            android:id="@+id/faq_text"  
			            android:layout_width="match_parent"  
			            android:layout_height="wrap_content"  
			            android:paddingTop="10dip"
			            android:paddingBottom="10dip"
			            android:gravity="center"
			            android:text="FAQ"  
			            android:textSize="11dip"
						android:textStyle="bold"
						android:textColor="#000000" />  
			     </LinearLayout>
	        </LinearLayout>
      	</TableRow>      	
        <View
	        android:layout_height="1dip"
	        android:background="#dfdfdf" />
        <TableRow            
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
			<LinearLayout 
	            android:orientation="horizontal"
	            android:layout_height="match_parent"
	            android:layout_weight="1">
	            <LinearLayout 
		            android:id="@+id/warranty_layout"
		            android:orientation="vertical"
		            android:gravity="center_horizontal"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content">	
					<ImageView
					    android:id="@+id/warranty"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:paddingTop="10dip"
					    android:src="@drawable/warranty_icon" />
					<TextView  
			            android:id="@+id/warranty_text"  
			            android:layout_width="match_parent"  
			            android:layout_height="wrap_content"  
			            android:paddingTop="10dip"
			            android:paddingBottom="10dip"
			            android:gravity="center"
			            android:text="WARRANTY"
			            android:textSize="11dip"
						android:textStyle="bold"
						android:textColor="#000000" />  
				</LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:orientation="horizontal"
	            android:layout_height="match_parent"
	            android:layout_weight="1">	
	            <View
	                android:layout_height="match_parent"
	                android:layout_width="1dp"
	                android:background="#dfdfdf"/>
	            <LinearLayout 
		            android:id="@+id/tracking_layout"
		            android:orientation="vertical"
		            android:gravity="center_horizontal"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content">	
			        <ImageView
				        android:id="@+id/tracking"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:paddingTop="10dip"
				        android:src="@drawable/tracking_icon" />
			        <TextView  
			            android:id="@+id/tracking_text"  
			            android:layout_width="match_parent"  
			            android:layout_height="wrap_content"
			            android:paddingTop="10dip"
			            android:paddingBottom="10dip"
			            android:gravity="center"
			            android:text="TRACKING" 
			            android:textSize="11dip"
						android:textStyle="bold"
						android:textColor="#000000" />  
		        </LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:orientation="horizontal"
	            android:layout_height="match_parent"
	            android:layout_weight="1">	
	            <View
	                android:layout_height="match_parent"
	                android:layout_width="1dp"
	                android:background="#dfdfdf"/>
	            <LinearLayout 
		            android:id="@+id/more_layout"
		            android:orientation="vertical"
		            android:gravity="center_horizontal"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content">	
			        <ImageView
				        android:id="@+id/more"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:paddingTop="10dip"
				        android:src="@drawable/more_icon" />
			        <TextView  
			            android:id="@+id/more_text"  
			            android:layout_width="match_parent"  
			            android:layout_height="wrap_content"  
			            android:paddingTop="10dip"
			            android:paddingBottom="10dip"
			            android:gravity="center"
			            android:text="MORE"  
			            android:textSize="11dip"
						android:textStyle="bold"
						android:textColor="#000000" />  
			     </LinearLayout>
	        </LinearLayout>
      	</TableRow>
	</TableLayout>
	<!--<View
		android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:background="#dfdfdf" />
	-->
    <LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:layout_marginTop="20dip"
	    android:background="#ffffff"
	    android:orientation="vertical">
		<TextView
		    android:id="@+id/copyright"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="#ffffff"
		    android:text="Copyright Â© 1995-2012 SAMSUNG All rights reserved."
		    android:textColor="#736f6e"
		    android:textSize="10dip"
		    android:layout_gravity="center_horizontal"
		    android:textStyle="normal" />
	</LinearLayout>	
</LinearLayout>	
