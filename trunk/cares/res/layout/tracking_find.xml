<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
	<ImageView
		android:id="@+id/logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"			
		android:background="@drawable/logo_bg"
	/>	
	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
			<com.samsung.cares.custom.CustomScrollView 
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent">
			
				<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:id="@+id/tracking_layout"
					android:orientation="vertical"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:paddingTop="20dip"
					android:paddingLeft="20dip"
					android:paddingRight="20dip"
					android:paddingBottom="20dip">				    
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingBottom="20dip"
						android:text="Find Transaction Number"
						android:textColor="#000000"
						android:textSize="18dip"
						android:textStyle="bold" />
					<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					    android:orientation="vertical"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:paddingTop="20dip"
						android:paddingLeft="20dip"
						android:paddingRight="20dip"
						android:paddingBottom="20dip"
					    android:background="#f2f2f2">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingBottom="10dip"
							android:text="Home Phone Number"
							android:textColor="#000000"
							android:textSize="14dip"
							android:textStyle="normal" />
					    <EditText
							android:id="@+id/phoneNo"  
							android:layout_width="fill_parent"
							android:layout_height="40dip"
							android:paddingBottom="10dip"
							android:hint=""
							android:lines="1"
							android:maxLength="20"
							android:singleLine="true"
							android:text=""
							android:inputType="phone"
							android:digits="0123456789"							
							android:textColor="#000000"
							android:textSize="14dip"
							android:textStyle="normal" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingBottom="10dip"
							android:text="First Name"
							android:textColor="#000000"
							android:textSize="14dip"
							android:textStyle="normal" />
					    <EditText
							android:id="@+id/firstName"  
							android:layout_width="fill_parent"
							android:layout_height="40dip"
							android:paddingBottom="10dip"
							android:hint=""
							android:lines="1"
							android:maxLength="30"
							android:singleLine="true"
							android:text=""
							android:textColor="#000000"
							android:textSize="14dip"
							android:textStyle="normal" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingBottom="10dip"
							android:text="Last Name"
							android:textColor="#000000"
							android:textSize="14dip"
							android:textStyle="normal" />
					    <EditText
							android:id="@+id/lastName"  
							android:layout_width="fill_parent"
							android:layout_height="40dip"
							android:paddingBottom="10dip"
							android:hint=""
							android:lines="1"
							android:maxLength="30"
							android:singleLine="true"
							android:text=""
							android:textColor="#000000"
							android:textSize="14dip"
							android:textStyle="normal" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingBottom="10dip"
							android:text="Zip Code"
							android:textColor="#000000"
							android:textSize="14dip"
							android:textStyle="normal" />
					    <EditText
							android:id="@+id/zipCode"  
							android:layout_width="fill_parent"
							android:layout_height="40dip"
							android:paddingBottom="10dip"
							android:hint=""
							android:lines="1"
							android:maxLength="5"
							android:singleLine="true"
							android:text=""
							android:inputType="phone"
							android:digits="0123456789"									
							android:textColor="#000000"
							android:textSize="14dip"
							android:textStyle="normal" />
					</LinearLayout>
					<LinearLayout
				    	android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal"
				        android:paddingTop="15dip"
				        android:gravity="right">
					    <ImageButton
							android:id="@+id/continue_button"
							android:background="@drawable/continue_btn"
							android:layout_marginLeft="10dip"
							android:layout_width="117dip"
							android:layout_height="36dip"/>
					</LinearLayout>
				</LinearLayout>				
			</com.samsung.cares.custom.CustomScrollView>			
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:gravity="center_horizontal" 
			    android:layout_alignParentBottom="true">
				<ImageButton
					android:id="@+id/home_button"
					android:background="@drawable/bottom_2_btn_home"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
				<ImageButton
					android:id="@+id/back_button"
					android:background="@drawable/bottom_2_btn_back"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			</LinearLayout>	
	</RelativeLayout>
	<ProgressBar
	   	android:layout_width="wrap_content" 
        android:layout_height="wrap_content"    
        android:layout_gravity="center"
	   	android:id="@+id/loading_progress"
	   	android:indeterminateDrawable="@drawable/progress_medium"
		android:visibility="gone"
	/>	
</LinearLayout>	
